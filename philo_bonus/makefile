NAME = philo_bonus

CC = gcc
RM = rm -f
FLAGS = -Wall -Wextra -Werror
THREAD = -pthread

SRC_DIR = ./
OBJ_DIR = ./obj/
INC_DIR = ./

SRC_FILES = init.c \
			monitor.c \
			parsing.c \
			philo_bonus.c \
			print.c \
			routine.c \
			tools.c \
			utils.c \

OBJ_FILES = $(SRC_FILES:.c=.o)

SRC = $(addprefix $(SRC_DIR), $(SRC_FILES))
OBJ = $(addprefix $(OBJ_DIR), $(OBJ_FILES))

# all rule
all : obj $(NAME)

obj:
	@mkdir -p $(OBJ_DIR)
$(OBJ_DIR)%.o:$(SRC_DIR)%.c
	@gcc $(FLAGS) $(THREAD) -I $(INC_DIR) -o $@ -c $<

