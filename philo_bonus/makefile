# clean rule
clean:
	@rm -Rf $(OBJ_DIR)
	@echo "â•â•â•â•â•â•â•â•â•â€¢Â°â€¢ Objects removed â€¢Â°â€¢â•â•â•â•â•â•â•â•â•"

# fclean rule
fclean: clean
	@rm -f $(NAME)
	@echo "â•â•â•â•â•â•â•â•â•â€¢Â°â€¢ $(NAME) removed â€¢Â°â€¢â•â•â•â•â•â•â•â•â•"

# re rule
re: fclean all

# phony
.PHONY: all clean fclean re
